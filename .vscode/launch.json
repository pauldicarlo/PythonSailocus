{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [


        {
            "name": "Python Debugger: Current File with Arguments",
            "type": "debugpy",
            "request": "launch",
            "program": "main.py",
            "console": "integratedTerminal"
        },
        {
            "name": "Python: Debug All Pytest Tests",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/.venv/bin/pytest", // Adjust path to your pytest executable if needed
            "args": [
                "${workspaceFolder}/tests", // Adjust 'tests' to your test discovery root if different
                "--no-cov"
            ],
            "console": "integratedTerminal",
            "justMyCode": false,
            "purpose": ["debug-test"]
        }
    ]
}