    "version": "0.2.0",
    "configurations": [


        {
            "name": "main.py",
            "type": "debugpy",
            "request": "launch",
            "program": "main.py",
            "console": "integratedTerminal"
        },
        {
            "name": "main_minimal.py",
            "type": "debugpy",
            "request": "launch",
            "program": "main_minimal.py",
            "console": "integratedTerminal"
        },
        {
            "name": "main_flask.py",
            "type": "debugpy",
            "request": "launch",
            "program": "main_flask.py",
            "console": "integratedTerminal"
        },
        {
            "name": "main_fastapi.py",
            "type": "debugpy",
            "request": "launch",
            "console": "integratedTerminal",

                    "module": "uvicorn",
                    "args": [
                        "main_fastapi:app", // Replace 'main' with your Python file name and 'app' with your FastAPI instance name
                        "--reload",
                        "--host", "127.0.0.1", // Adjust host if needed
                        "--port", "8000" // Adjust port if needed
                    ]

        },
         {
            "name": "main_fastapi.py HTTPS",
            "type": "debugpy",
            "request": "launch",
            "console": "integratedTerminal",

                    "module": "uvicorn",
                    "args": [
                        "main_fastapi:app", // Replace 'main' with your Python file name and 'app' with your FastAPI instance name
                        "--reload",
                        "--host", "127.0.0.1", // Adjust host if needed
                        "--port", "8000", // Adjust port if needed
                        "--ssl-keyfile", "certs/server.key", 
                        "--ssl-certfile", "certs/server.crt", 
                        "--ssl-ca-certs", "certs/ca.crt", 
                        "--ssl-version", "2", 
                        "--ssl-cert-reqs", "2" //  2 means CERT_REQUIRED (enforces client cert)
                    ]

        },
        {
            "name": "Python: Debug All Pytest Tests",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/.venv/bin/pytest", // Adjust path to your pytest executable if needed
            "args": [
                "${workspaceFolder}/tests", // Adjust 'tests' to your test discovery root if different
                "--no-cov"
            ],
            "console": "integratedTerminal",
            "justMyCode": false,
            "purpose": ["debug-test"]
        }
    ]
}